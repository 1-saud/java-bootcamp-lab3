public class Store {

    private User[] user;
    private Media[] media;
    private int userCount;
    private int mediaCount;

    public Store() {
        user = new User[100];
        media = new Media[100];
        userCount = 0;
        mediaCount = 0;
    }

    public void addUser(User user) {
        if (userCount < this.user.length) {
            this.user[userCount] = user;
            userCount++;
        }
    }

    public User[] displayUsers() {
        for (int i = 0; i < userCount; i++) {
            System.out.println((i + 1) + ". " + user[i].getUserName() );
        }
        return user;
    }

    public void addMedia(Media media) {
        if (mediaCount < this.media.length) {
            this.media[mediaCount] = media;
            mediaCount++;
        }
    }

    public Media[] displayMedias() {
        for (int i = 0; i < mediaCount; i++) {
            System.out.println((i + 1) + ". " + media[i].getTitle());
        }
        return media;
    }

    public Book searchBook(String title) {
        for (int i = 0; i < mediaCount; i++) {
            if (media[i] instanceof Book) {
                Book b = (Book) media[i];
                if (b.getTitle().equalsIgnoreCase(title)) {
                    return b;
                }
            }
        }
        return null;
    }
}


