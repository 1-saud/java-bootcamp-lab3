public class Novel extends Book{
    private String genre;

    public Novel(String title, String auteur, String isbn, double price, int stock, Review[] review, int reviewCount, String genre) {
        super(title, auteur, isbn, price, stock, review, reviewCount);
        this.genre = genre;
    }

    public String getGenre() {
        return genre;
    }

    public void setGenre(String genre) {
        this.genre = genre;
    }

    public String getMediaType() {
        if (getAverageRating() >= 4.5) {
            return "Bestselling Novel";
        } else {
            return "Novel";
        }
    }

    public String toString() {
        return "Title: " + getTitle() +
                ", Author: " + getAuteur() + ", Genre: " + genre + ", Price: " + getPrice() + ", Rating: " + getAverageRating() +
                ", Type: " + getMediaType();
    }
}
