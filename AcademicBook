public class AcademicBook extends Book {
    private String subject;


    public AcademicBook(String title, String auteur, String isbn, double price, int stock, Review[] review, int reviewCount, String subject) {
        super(title, auteur, isbn, price, stock, review, reviewCount);
        this.subject = subject;
    }

    public String getSubject() {
        return subject;
    }

    public void setSubject(String subject) {
        this.subject = subject;
    }

    public String getMediaType() {
        if (getAverageRating() >= 4.5) {
            return "Bestselling AcademicBook";
        } else {
            return "AcademicBook";
        }
    }

    public String toString() {
        return "Title: " + getTitle() + ", Author: " + getAuteur() + ", Subject: " + subject + ", Price: " + getPrice()
                + ", Rating: " + getAverageRating() + ", Type: " + getMediaType();
    }
}
